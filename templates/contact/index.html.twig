{% extends 'base.html.twig' %}

{% block title %}Hello {{controller_name}}{% endblock %}

{% block body %}

<section>
    <p></p><p>Ci-joint la liste des contacts. </p>
    <p></p><p>Avec un compte d'administration, vous pouvez :</p>
    <p>- créer un nouveau contact : <a href="{{ path('contact_create') }}" class="btn btn-success">Créer</a></p>
    <p>- modifier les info d'un contact par le bouton "Modifier" </p>
    <p>- supprimer un contact par le bouton "Supprimer".</p>
    <table class="table table-dark table-striped table-bordered table-hover">
        <tr>
            <thead class="thead-light">
            <th>Détail</th>
            </thead>
        </tr>
        {% for n_contact in contact %}
            <article>
                <tr>
                    <td> {{ n_contact.name  }} </td>
                    <td><a href="{{ path('contact_show',{'id': n_contact.id}) }}" class="btn btn-success">Détail</a></td>
                    <td><a href="{{ path('contact_edit',{'id': n_contact.id}) }}" class="btn btn-warning">Modifier</a></td>
                    <td><a href="{{ path('contact_del',{'id': n_contact.id}) }}" class="btn btn-danger" onclick="return confirm('Confirmez la suppression ?')">Supprimer</a></td>
                </tr>
            </article>
        {% endfor %}
    </table>
</section>
{{ knp_pagination_render(contact) }}
{% endblock %}