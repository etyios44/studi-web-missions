{% extends 'base.html.twig' %}

{% block title %}Gestion des missions{% endblock %}

{% block body %}

<section>
    <p></p><h1>Liste des missions proposées</h1>
    <p>Vous pouvez visualiser le détail de chaque mission par le bouton "Détail".</p>
    {% if app.user %}
    <p></p><p>Avec un compte d'administration, vous pouvez :</p>
    <p>- créer une nouvelle mission : <a href="{{ path('missions_create') }}" class="btn btn-success">Créer</a></p>
    <p>- modifier le contenu de chaque mission par le bouton "Modifier" </p>
    <p>- supprimer une mission par le bouton "Supprimer".</p>
    {% endif %}
    <table class="table table-dark table-striped table-bordered table-hover">
        <tr>
            <thead class="thead-light">
            <th>Titre</th>
            <th>Début</th>
            </thead>
        </tr>
        {% for mission in missions %}
            <article>
                <tr>
                    <td> {{ mission.TitleMission  }} </td>
                    <td> {{ mission.DateStartMission | date('d/m/Y H:i') }} </td>
                    <td><a href="{{ path('missions_show',{'id': mission.id}) }}" class="btn btn-success">Détail</a></td>
                    {% if app.user %}
                    <td><a href="{{ path('missions_edit',{'id': mission.id}) }}" class="btn btn-warning">Modifier</a></td>
                    <td><a href="{{ path('missions_del',{'id': mission.id}) }}" class="btn btn-danger" onclick="return confirm('Confirmez la suppression ?')">Supprimer</a></td>
                    {% endif %}
                </tr>
            </article>
        {% endfor %}
    </table>
</section>
{{ knp_pagination_render(missions) }}
{% endblock %}