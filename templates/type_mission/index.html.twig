{% extends 'base.html.twig' %}

{% block title %}Hello {{controller_name}}{% endblock %}

{% block body %}

<section>
    <p></p><p>Ci-joint la liste des type de missions proposées. </p>
    <p>Vous pouvez visualiser le détail de chaque type de mission par le bouton "Détail".</p>
    {% if app.user %}
    <p></p><p>Avec un compte d'administration, vous pouvez :</p>
    <p>- créer un nouveau type de mission : <a href="{{ path('typemission_create') }}" class="btn btn-success">Créer</a></p>
    <p>- modifier le contenu de chaque type de mission par le bouton "Modifier" </p>
    <p>- supprimer un type de mission par le bouton "Supprimer".</p>
    {% endif %}
    <table class="table table-dark table-striped table-bordered table-hover">
        <tr>
            <thead class="thead-light">
            <th>Titre</th>
            </thead>
        </tr>
        {% for n_typemission in typemission %}
            <article>
                <tr>
                    <td> {{ n_typemission.title  }} </td>
                    <td><a href="{{ path('typemission_show',{'id': n_typemission.id}) }}" class="btn btn-success">Détail</a></td>
                    {% if app.user %}
                    <td><a href="{{ path('typemission_edit',{'id': n_typemission.id}) }}" class="btn btn-warning">Modifier</a></td>
                    <td><a href="{{ path('typemission_del',{'id': n_typemission.id}) }}" class="btn btn-danger" onclick="return confirm('Confirmez la suppression ?')">Supprimer</a></td>
                    {% endif %}
                </tr>
            </article>
        {% endfor %}
    </table>
</section>
{{ knp_pagination_render(typemission) }}
{% endblock %}